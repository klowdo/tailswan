{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "tailscale",
      "matchPackagePatterns": ["^tailscale\\.com"]
    },
    {
      "matchManagers": ["gomod"],
      "groupName": "aws-sdk",
      "matchPackagePatterns": ["^github\\.com/aws/"]
    },
    {
      "matchManagers": ["gomod"],
      "groupName": "charmbracelet",
      "matchPackagePatterns": ["^github\\.com/charmbracelet/", "^charm\\.land/"]
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "enabled": true
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@klowdo"]
  }
}
